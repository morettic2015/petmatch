<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10000099" id="br.com.morettic.petmatch.Adopt" version="1.0.99" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pet Match</name>
    <description>
        Adote um pet.
    </description>
    <author email="android@morettic.com.br" href="https://morettic.com.br">
        PetMatch - Adote um Pet
    </author>
    <content src="index.html" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <access origin="*" />
    <icon platform="android" src="www/res/icons/android/icon_pet.png" />
    <preference name="android-minSdkVersion" value="18" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="br.com.morettic.petmatch.Adopt" />
    </feature>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-facebook4" spec="~1.7.4">
        <variable name="APP_ID" value="435098223494007" />
        <variable name="APP_NAME" value="petmatchfinder" />
    </plugin>
    <plugin name="cordova-plugin-android-permissions" spec="~0.11.0" />
    <plugin name="cordova-plugin-googleplus" spec="https://github.com/Telerik-Verified-Plugins/Google-Sign-In" />
</widget>
